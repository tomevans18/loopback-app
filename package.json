{
  "name": "movies",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "dev": "nodemon .",
    "start": "node .",
    "startDb": "mongod --dbpath data/db --logpath logs/mongo.log --logappend",
    "format": "semistandard --env mocha --fix",
    "pretest": "npm run format",
    "test": "npm run test:coverage npm run test:unit",
    "test:coverage": "nyc",
    "test:unit": "mocha --exit './server/**/*.spec.js'",
    "test:component": "cross-env MOCHAWESOME_REPORTDIR=./test/reports MOCHAWESOME_REPORTFILENAME=mocha-report mocha --exit --timeout 100000 --reporter mochawesome './test/**/*.spec.js'"
  },
  "dependencies": {
    "casual": "^1.6.0",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^3.10.0",
    "hystrixjs": "^0.2.0",
    "loopback": "^3.22.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^6.2.0",
    "loopback-connector-mongodb": "^4.0.0",
    "rxjs": "^6.4.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^3.0.0",
    "swagger-tools": "^0.10.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^3.17.1",
    "eslint-config-loopback": "^8.0.0",
    "eslint-config-semistandard": "^13.0.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "semistandard": "^13.0.1",
    "sinon": "^7.3.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "nyc": {
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "server/**/*.spec.js",
      "server/server.js",
      "server/app.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "semistandard": {
    "ignore": [
      "test/reports"
    ],
    "globals": [
      "format",
      "from",
      "to"
    ]
  },
  "license": "UNLICENSED",
  "description": "movies"
}
